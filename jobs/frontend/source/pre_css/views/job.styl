@require '../_base/variables'
@require '../_helpers/*'
.filter-search
	display none 
.share-button
	background $brandPrimary
	color white 
	width 70px
	height 70px 
	border-radius 50% 50% 0 50%
	position fixed
	right 20px
	bottom 20px
	cursor pointer
	transition 0.3s all ease
	z-index 1
	&:hover 
		transition 0.3s all ease
		border-radius 0 50% 50% 50%
		a 
			display block
	span 
		line-height 70px
		text-align center
		display block
		font-size 40px
	a
		display none
		color white 
		width 50px 
		height 50px 
		border-radius 50%
		position absolute
		line-height 50px 
		text-align center 
		font-size 30px 
		text-decoration none 
		&.icon-fb 
			background $fbColor
			left -60px
			bottom 0
		&.icon-twitter
			background $twitterColor
			top -40px 
			left -40px
		&.icon-email
			background $emailColor
			top -60px
			right 0
.main-content 
	margin-bottom 50px
	a 
		color inherit
		text-decoration none
		position relative
		display inline-block
		transition 0.1s all ease
		&:after 
			content ""
			border-bottom 3px solid $brandPrimary
			opacity 0.6
			position absolute
			bottom 0
			left 0
			width 100%
			transition 0.1s all ease
		&:hover
			color $brandPrimary
			transition 0.1s all ease
			&:after 
				opacity 1
				color white 
				transition 0.1s all ease
	h3 
		font-size 22px
		&:not(:first-child)
			margin-top 40px
			
.job-detail-title
	//background lighten($brandPrimary, 95%)
	background lighten($lightGrey,30%)
	border 1px dashed darken($lightGrey, 10%)
	border-left 0
	border-right 0
	text-align center 
	padding 30px 0
	margin-bottom 20px
	position relative
	.container 
		position relative
	.title 
		font-weight normal
		font-size 2rem
		line-height 1.2
		margin-bottom 5px
		margin-top 20px
	.see-list
		text-decoration none 
		position absolute
		left 0
		top 0
		bottom 0
		margin auto
		line-height 3
	.job-company
		font-size 1.2rem
		vertical-align middle
		text-decoration none 
		color inherit
		transition 0.3s all 
		&:hover 
			transition 0.3s all 
			color $brandPrimary
	.job-type
		color white 
		border-radius $borderRadius
		display inline-block
		margin-left 10px 
		padding 3px 8px
		vertical-align middle
		font-size 0.8rem
		&.fulltime
			background-color $fulltimeColor
		&.freelance
			background-color $freelanceColor
		&.parttime
			background-color $parttimeColor
	.job-company-logo
		position absolute
		left 0 
		right 0
		margin auto 
		top -40px
		img
			background lighten($lightGrey,80%) 
			width 80px
			border-radius 50%
			//border 3px solid white
			border 1px dashed darken($lightGrey,10%)
			padding 3px
.about-job-post
	.icon
		margin-right 5px
		&:before
			vertical-align bottom
			
	p, a 
		padding 10px 0
		margin 0
		border-bottom 1px dashed lighten(grey, 70%)
	
	a 
		color inherit
		text-decoration none
		position relative
		display block
		transition 0.1s all ease
		&:hover
			color $brandPrimary
			transition 0.1s all ease
	.lnk
		text-decoration none
		color inherit
		font-size 1rem
		padding 5px 0
		border-top 1px solid darken($lightGrey,5%)
		vertical-align middle
		width 50%
		
				
				
		
			
